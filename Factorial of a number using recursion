#include<stdio.h>
#include<conio.h>
int factorial(int x)
{
    if(x==1||x==0)
        return 1; 
    return x * factorial(x-1);   
}
int main()
{   int x;
    printf("Enter the number which you want for factorial\n");
    scanf("%d",&x);
    x=factorial(x);
    printf("the value of factorial is %d",x);
    return 0;
}
